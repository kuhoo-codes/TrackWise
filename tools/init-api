#!/bin/bash

# tools/init-api
# Usage:
#   ./tools/init-api
#
# Requirements:
#   - This script must be executable: chmod +x tools/init-api

set -e

echo "üîß Initializing backend environment..."

# Install uv.
echo "üì¶ Installing uv..."
if [[ "$OSTYPE" == "msys" || "$OSTYPE" == "win32" ]]; then
powershell -Command "irm https://astral.sh/uv/0.7.10/install.ps1 | iex"
else
curl -LsSf https://astral.sh/uv/0.7.10/install.sh | sh
fi

# Resolve script and backend directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BACKEND_DIR="$SCRIPT_DIR/../api"

# Move into backend directory
if cd "$BACKEND_DIR"; then
  echo "üöÄ Running 'uv sync' inside $BACKEND_DIR"
  uv sync
else
  echo "‚ùå Failed to change directory to $BACKEND_DIR"
  exit 1
fi

echo ""
echo "‚úÖ Backend initialization successful!"
