#!/bin/bash

# tools/init-client
# Usage:
#   ./tools/init-client
#
# Requirements:
#   - This script must be executable: chmod +x tools/init-client

set -e

echo "ğŸ¨ Initializing frontend environment..."

# Resolve script and client directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CLIENT_DIR="$SCRIPT_DIR/../client"

# Move into client directory
if cd "$CLIENT_DIR"; then
  echo "ğŸ“ Entered $CLIENT_DIR"
else
  echo "âŒ Failed to change directory to $CLIENT_DIR"
  exit 1
fi

# Check for pnpm
if ! command -v pnpm &> /dev/null; then
  echo "âŒ 'pnpm' is not installed."
  echo "ğŸ‘‰ Installing pnpm globally: 'npm install -g pnpm'"
  npm install -g pnpm
fi

# Install dependencies
echo "ğŸ“¦ Installing dependencies with pnpm..."
if pnpm install; then
  echo ""
  echo "âœ… Frontend dependencies installed successfully!"
else
  echo "âŒ pnpm install failed."
  exit 1
fi

echo ""
echo "âœ… Frontend initialization successful!"
