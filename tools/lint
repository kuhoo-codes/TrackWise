#!/bin/bash

# tools/lint
# Usage:
#   ./tools/lint [--fix]
#
# Requirements:
#   - uv must be installed
#   - script must have executable permission: chmod +x tools/lint

FIX_MODE=false

# Parse arguments
for arg in "$@"; do
  if [[ "$arg" == "--fix" ]]; then
    FIX_MODE=true
  fi
done

echo "üèÉ‚Äç‚ôÇÔ∏è Running ./tools/lint-api"
echo ""

if $FIX_MODE; then
  tools/lint-api --fix
else
  tools/lint-api
fi
BACKEND_EXIT_CODE=$?

if [ $BACKEND_EXIT_CODE -ne 0 ]; then
  echo "‚ùå Backend linting failed."
  echo "Run './tools/lint --fix' to auto-fix some lint issues."
  exit 1
fi

echo "üèÉ‚Äç‚ôÇÔ∏è Running ./tools/lint-client"
echo ""

if $FIX_MODE; then
  tools/lint-client --fix
else
  tools/lint-client
fi
FRONTEND_EXIT_CODE=$?

if [ $FRONTEND_EXIT_CODE -ne 0 ]; then
  echo "‚ùå Frontend linting failed."
  echo "Run './tools/lint --fix' to auto-fix some lint issues."
  exit 1
fi

echo "‚úÖ All linting successful!"
echo ""

